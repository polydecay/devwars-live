{
    "compilerOptions": {
        "module": "ES2015",
        "moduleResolution": "node",
        "isolatedModules": true,
        "target": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],

        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "noEmit": true,

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
